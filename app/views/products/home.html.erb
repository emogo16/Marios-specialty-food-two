<h1>Marios Specialty Food Products</h1>

<% if current_user %>

<%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
<% else %>
<%= link_to 'Sign up', new_user_registration_path %>

<%= link_to 'Sign in', new_user_session_path %>
<% end %>

<p><%= link_to "See the product list", products_path %></p>

  <div class="wrapper">
    <a href="?sort=recent"><button class="btn btn-default">Recently added</button></a>
    <a href="?sort=most_reviews"><button class="btn btn-default">Most Reviews</button></a>
    <a href="?sort=usa"><button class="btn btn-default">Made in United States of America</button></a>
    
    <button class="btn btn-default"><%= link_to "All Products", products_path %></button>
  </div>

<hr>
<br>
<h1>Products</h1>
  <ul>
    <% @products.each do |product| %>
      <li><%= link_to product.name, product_path(product) %></li>
    <% end %>
  </ul>
</div>
