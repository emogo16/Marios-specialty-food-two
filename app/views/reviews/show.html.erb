<h1>Author:  <%= @review.author %></h1>
<h1>Product: <%= @product.name %></h1>
<h1>Content: <%= @review.content_body %></h1>
<h1>Rating:  <%= @review.rating %></h1>

    <%= link_to "Edit Review", edit_product_review_path(@product, @review) %> |
    <%= link_to "Delete Review", product_review_path(@review),
                      :data => {:confirm => "Are you sure?",
                      :method => "delete"} %>


<p><%= link_to "Return to product", product_path(@product) %></p>